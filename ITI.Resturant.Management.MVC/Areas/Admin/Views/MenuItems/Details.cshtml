@model ITI.Resturant.Management.Domain.Entities.Menu.MenuItem
@{
    ViewData["Title"] = "Menu Item Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height:200px;">
                        <i class="fas fa-image fa-3x text-muted"></i>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <h5>Description</h5>
                <p class="text-muted">@Model.Description</p>

                <div class="d-flex gap-4 mb-3">
                    <div>
                        <h6 class="mb-0">Price</h6>
                        <div class="text-success fw-bold">@Model.Price.ToString("C")</div>
                    </div>
                    <div>
                        <h6 class="mb-0">Preparation</h6>
                        <div>@Model.PreparationTimeInMinutes min</div>
                    </div>
                    <div>
                        <h6 class="mb-0">Status</h6>
                        @if (Model.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Unavailable</span>
                        }
                    </div>
                </div>

                <a asp-area="Admin" asp-controller="MenuItems" asp-action="EditMenu" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                <a asp-area="Admin" asp-controller="MenuItems" asp-action="ManageMenu" class="btn btn-outline-secondary">Back to list</a>
            </div>
        </div>
    </div>
</div>
