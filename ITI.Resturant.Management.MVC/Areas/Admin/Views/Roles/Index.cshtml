@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Manage Roles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Manage Roles</h2>

<div class="mb-3">
    <a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-primary">Create New Role</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td class="text-end">
                    <a asp-area="Admin" asp-controller="Roles" asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-outline-secondary me-2">Edit</a>
                    <form asp-area="Admin" asp-controller="Roles" asp-action="Delete" method="post" class="d-inline-block" data-role-name="@r.Name" onsubmit="return confirmDelete(this);">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@r.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function confirmDelete(form) {
            var name = form.getAttribute('data-role-name') || 'this role';
            return confirm('Delete role "' + name + '"?');
        }
    </script>
}
