@model List<ITI.Resturant.Management.Application.DTOs.Admin.UserListDto>
@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Anti-forgery token for AJAX calls *@
<form id="antiForgeryForm">@Html.AntiForgeryToken()</form>

<h2>Manage Users</h2>

<div class="card mt-3">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Roles</th>
                    <th>Locked</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.UserName</td>
                        <td>@u.Email</td>
                        <td>@u.FullName</td>
                        <td id="roles-@u.Id">
                            @foreach (var r in u.Roles)
                            {
                                <span class="badge bg-primary me-1">@r</span>
                            }
                        </td>
                        <td>@(u.IsLockedOut ? "Yes" : "No")</td>
                        <td>
                            <button class="btn btn-sm btn-outline-secondary me-1" onclick="showRoleEditor('@u.Id')">Edit Roles</button>
                            @if (u.IsLockedOut)
                            {
                                <button class="btn btn-sm btn-outline-success" onclick="toggleLock('@u.Id', false)">Unlock</button>
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-danger" onclick="toggleLock('@u.Id', true)">Lock</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Role editor modal -->
<div class="modal fade" id="roleEditorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Roles</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editingUserId" />
                <div class="mb-3">
                    <label class="form-label">Available Roles</label>
                    <div>
                        @foreach (var r in (ViewData["AvailableRoles"] as List<string> ?? new List<string>()))
                        {
                            <div class="form-check form-check-inline">
                                <input class="form-check-input role-checkbox" type="checkbox" id="role-@r" value="@r" />
                                <label class="form-check-label" for="role-@r">@r</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveRoles()">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/userManagement.js" asp-append-version="true"></script>
}
