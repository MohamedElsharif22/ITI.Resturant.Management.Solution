@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Role</h2>

<form method="post" asp-action="CreateRole">
    <div class="mb-3">
        <label class="form-label">Role Name</label>
        <input type="text" name="name" class="form-control" />
        @if (ViewData.ModelState["Name"]?.Errors?.Count > 0)
        {
            <div class="text-danger">@ViewData.ModelState["Name"].Errors[0].ErrorMessage</div>
        }
    </div>
    <button class="btn btn-primary">Create</button>
    <a asp-action="ManageRoles" class="btn btn-secondary ms-2">Cancel</a>
</form>
