@{
    ViewData["Title"] = "Closed";
    var opening = ViewBag.Opening as string ?? "09:00";
    var closing = ViewBag.Closing as string ?? "22:00";
    var isHappy = (bool)(ViewBag.IsHappyHour ?? false);
    var isOrderAttempt = (bool)(ViewBag.IsOrderAttempt ?? false);
    var returnUrl = ViewBag.ReturnUrl as string ?? "/";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card text-center shadow-lg p-4">
            <div class="card-body">
                <div class="display-1 text-danger">
                    <i class="fas fa-door-closed"></i>
                </div>
                <h1 class="mt-3">We are currently closed</h1>
                <p class="lead text-muted">Our team is away right now. Business hours: <strong>@opening</strong> - <strong>@closing</strong></p>

                @if (isHappy)
                {
                    <div class="alert alert-success mt-3">
                        <i class="fas fa-gift"></i> It's happy hour! Some offers may apply when we reopen.
                    </div>
                }

                @if (isOrderAttempt)
                {
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle"></i> Orders cannot be placed while we're closed. You can save your cart and place the order when we're open.
                    </div>
                }

                <div class="mt-4 d-flex justify-content-center gap-2">
                    <a href="@returnUrl" class="btn btn-outline-primary">Return to previous page</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Home</a>
                    <a href="/contact" class="btn btn-outline-secondary">Contact Us</a>
                </div>

                <div class="mt-4 text-muted small">
                    Tip: Business hours are configurable in the application settings.
                </div>
            </div>
        </div>
    </div>
</div>
