@model ITI.Resturant.Management.MVC.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-md-8">
        <h2>Featured Items</h2>
        <div class="row">
            @foreach(var it in Model.FeaturedMenuItems)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@it.ImageUrl" class="card-img-top" />
                        <div class="card-body">
                            <h5>@it.Name</h5>
                            <p>@it.Description</p>
                            <p><strong>@it.Price.ToString("C")</strong></p>
                            <a asp-controller="Menu" asp-action="Details" asp-route-id="@it.Id" class="btn btn-sm btn-primary">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4">
        <h3>Categories</h3>
        <ul class="list-group">
            @foreach(var c in Model.Categories)
            {
                <li class="list-group-item">@c.Name</li>
            }
        </ul>
    </div>
</div>
