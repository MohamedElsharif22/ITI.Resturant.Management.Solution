@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<style>
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, rgba(45, 106, 79, 0.95) 0%, rgba(64, 145, 108, 0.9) 100%), url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=1600') center/cover;
        color: white;
        padding: 5rem 0;
        border-radius: 15px;
        margin-bottom: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .hero-content h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .hero-content p {
        font-size: 1.3rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }

    .hero-buttons .btn {
        padding: 1rem 2.5rem;
        font-size: 1.1rem;
        margin: 0.5rem;
        border-radius: 50px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Features Section */
    .features-section {
        padding: 3rem 0;
        margin-bottom: 3rem;
    }

    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        height: 100%;
        border: 2px solid transparent;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(45, 106, 79, 0.2);
            border-color: var(--primary-light);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
        color: white;
        box-shadow: 0 5px 15px rgba(45, 106, 79, 0.3);
    }

    .feature-card h4 {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .feature-card p {
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* Categories Section */
    .section-title {
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
    }

        .section-title h2 {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
        }

        .section-title p {
            font-size: 1.1rem;
            color: var(--text-muted);
        }

        .section-title::after {
            content: '';
            display: block;
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-color), var(--accent-light));
            margin: 1rem auto 0;
            border-radius: 2px;
        }

    /* Category Cards */
    .category-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        margin-bottom: 2rem;
        height: 280px;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 2rem;
    }

        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
            background: linear-gradient(135deg, rgba(45, 106, 79, 0.05), rgba(64, 145, 108, 0.05));
        }

    .category-icon-display {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        font-size: 3.5rem;
        color: white;
        box-shadow: 0 8px 20px rgba(45, 106, 79, 0.3);
        transition: all 0.3s ease;
    }

    .category-card:hover .category-icon-display {
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 12px 30px rgba(45, 106, 79, 0.5);
    }

    .category-content {
        text-align: center;
    }

        .category-content h5 {
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
            font-size: 1.3rem;
        }

            .category-content h5 i {
                color: var(--primary-color);
            }

    .category-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: var(--accent-color);
        color: white;
        padding: 0.3rem 1rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        box-shadow: 0 3px 10px rgba(244, 162, 97, 0.4);
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

        .category-badge i {
            font-size: 0.9rem;
        }

    /* Featured Menu Items */
    .menu-item-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        margin-bottom: 2rem;
        height: 100%;
    }

        .menu-item-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }

    .menu-item-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .menu-item-card:hover .menu-item-image {
        transform: scale(1.1);
    }

    .menu-item-content {
        padding: 1.5rem;
    }

        .menu-item-content h5 {
            font-weight: 700;
            color: var(--primary-dark);
            margin-bottom: 0.5rem;
            font-size: 1.2rem;
        }

        .menu-item-content p {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 1rem;
            height: 3rem;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    .price-tag {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--accent-light);
        margin-bottom: 1rem;
    }

    .menu-item-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .availability-badge {
        padding: 0.3rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
    }

        .availability-badge.available {
            background-color: #d4edda;
            color: #155724;
        }

        .availability-badge.unavailable {
            background-color: #f8d7da;
            color: #721c24;
        }

    /* Stats Section */
    .stats-section {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        color: white;
        padding: 3rem 0;
        border-radius: 15px;
        margin: 4rem 0;
        box-shadow: 0 10px 30px rgba(45, 106, 79, 0.3);
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* CTA Section */
    .cta-section {
        background: linear-gradient(135deg, rgba(244, 162, 97, 0.1), rgba(231, 111, 81, 0.1));
        padding: 4rem 2rem;
        border-radius: 15px;
        text-align: center;
        margin: 4rem 0;
        border: 2px solid var(--accent-color);
    }

        .cta-section h3 {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-dark);
            margin-bottom: 1rem;
        }

        .cta-section p {
            font-size: 1.2rem;
            color: var(--text-muted);
            margin-bottom: 2rem;
        }

    @@media (max-width: 768px) {
        .hero-content h1

    {
        font-size: 2.5rem;
    }

    .hero-content p {
        font-size: 1.1rem;
    }

    .section-title h2 {
        font-size: 2rem;
    }

    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto text-center hero-content">
                <h1 class="animate__animated animate__fadeInDown">Welcome to Delicious Restaurant</h1>
                <p class="animate__animated animate__fadeInUp">Experience culinary excellence with our handcrafted dishes made from the finest ingredients. Order now and taste the difference!</p>
                <div class="hero-buttons animate__animated animate__fadeInUp">
                    <a asp-controller="Menu" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="fas fa-book-open"></i> View Menu
                    </a>
                    <a asp-controller="Order" asp-action="Create" class="btn btn-accent btn-lg">
                        <i class="fas fa-shopping-bag"></i> Order Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <h4>Fast Delivery</h4>
                    <p>Get your delicious meal delivered to your doorstep in under 30 minutes. Hot, fresh, and on time!</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h4>Fresh Ingredients</h4>
                    <p>We use only the freshest, locally-sourced ingredients to ensure the highest quality in every dish.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <h4>Quality Service</h4>
                    <p>Our commitment to excellence means you get exceptional service and unforgettable dining experiences.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
@if (Model?.Categories != null && Model.Categories.Any())
{
    <section class="categories-section mb-5">
        <div class="container">
            <div class="section-title">
                <h2>Browse Our Categories</h2>
                <p>Discover a world of flavors across our diverse menu categories</p>
            </div>
            <div class="row">
                @foreach (var category in Model.Categories.Take(6))
                {
                    <div class="col-md-4 mb-4">
                        <a asp-controller="Menu" asp-action="ByCategory" asp-route-categoryName="@category.Name" class="text-decoration-none">
                            <div class="category-card">
                                <span class="category-badge">
                                    @if (!string.IsNullOrEmpty(category.IconClass))
                                    {
                                        <i class="@category.IconClass"></i>
                                    }
                                    Popular
                                </span>
                                <div class="category-icon-display">
                                    @if (!string.IsNullOrEmpty(category.IconClass))
                                    {
                                        <i class="@category.IconClass"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-utensils"></i>
                                    }
                                </div>
                                <div class="category-content">
                                    <h5>
                                        @if (!string.IsNullOrEmpty(category.IconClass))
                                        {
                                            <i class="@category.IconClass me-2"></i>
                                        }
                                        @category.Name
                                    </h5>
                                    <p class="text-muted mb-0">@category.Description</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Featured Menu Items -->
@if (Model?.FeaturedMenuItems != null && Model.FeaturedMenuItems.Any())
{
    <section class="featured-section mb-5">
        <div class="container">
            <div class="section-title">
                <h2>Featured Dishes</h2>
                <p>Chef's special selections just for you</p>
            </div>
            <div class="row">
                @foreach (var item in Model.FeaturedMenuItems)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="menu-item-card">
                            <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
                                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/300x220?text=" + item.Name : item.ImageUrl)"
                                     alt="@item.Name"
                                     class="menu-item-image">
                            </a>
                            <div class="menu-item-content">
                                <h5>@item.Name</h5>
                                <p>@(item.Description?.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)</p>
                                <div class="price-tag">$@item.Price.ToString("F2")</div>
                                <div class="menu-item-footer">
                                    <span class="availability-badge @(item.IsAvailable ? "available" : "unavailable")">
                                        @(item.IsAvailable ? "Available" : "Sold Out")
                                    </span>
                                    @if (item.IsAvailable)
                                    {
                                        <button class="btn btn-sm btn-primary" onclick="addToCart(@item.Id, '@item.Name', @item.Price, '@item.ImageUrl', '@item.Category?.Name')">
                                            <i class="fas fa-plus"></i> Add
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="text-center mt-4">
                <a asp-controller="Menu" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-book-open"></i> View Full Menu
                </a>
            </div>
        </div>
    </section>
}

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-utensils"></i> 150+
                    </div>
                    <div class="stat-label">Menu Items</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-users"></i> 10K+
                    </div>
                    <div class="stat-label">Happy Customers</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-award"></i> 25+
                    </div>
                    <div class="stat-label">Awards Won</div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="stat-item">
                    <div class="stat-number">
                        <i class="fas fa-star"></i> 4.9
                    </div>
                    <div class="stat-label">Average Rating</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <h3>Ready to Order?</h3>
        <p>Don't wait! Place your order now and enjoy amazing food delivered to your door.</p>
        <a asp-controller="Order" asp-action="Create" class="btn btn-accent btn-lg">
            <i class="fas fa-shopping-bag"></i> Start Your Order
        </a>
    </div>
</section>

@section Scripts {
    <script>
        function addToCart(menuItemId, name, price, imageUrl, category) {
            const data = {
                menuItemId: menuItemId,
                name: name,
                price: price,
                imageUrl: imageUrl,
                category: category,
                quantity: 1
            };

            fetch('/Cart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(cart => {
                // Update cart badge
                const badge = document.getElementById('cartBadge');
                const totalItems = cart.items?.reduce((sum, item) => sum + item.quantity, 0) || 0;
                if (totalItems > 0) {
                    badge.textContent = totalItems;
                    badge.style.display = 'inline-block';
                }

                // Show success message
                alert(`${name} added to cart!`);
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to add item to cart. Please try again.');
            });
        }
    </script>
}