@using ITI.Resturant.Management.Application.ExternalServices.Contracts
@model ITI.Resturant.Management.Domain.Entities.Menu.MenuItem
@inject IImageUrlResolver imgResolver
@{
    ViewData["Title"] = Model.Name;
}

<div class="card">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@imgResolver.Resolve(Model.ImageUrl)" class="img-fluid rounded-start" alt="@Model.Name" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3>@Model.Name</h3>
                <p>@Model.Description</p>
                <p><strong>@Model.Price.ToString("C")</strong></p>
                <p>Preparation: @Model.PreparationTimeInMinutes minutes</p>
                @if (Model.IsAvailable)
                {
                    <form asp-controller="Order" asp-action="Create" method="get">
                        <input type="hidden" name="menuItemId" value="@Model.Id" />
                        <button class="btn btn-success">Order Now</button>
                    </form>
                }
                else
                {
                    <span class="badge bg-danger">Unavailable</span>
                }
            </div>
        </div>
    </div>
</div>
