@model IEnumerable<ITI.Resturant.Management.Domain.Entities.Menu.MenuCategory>

@{
    ViewData["Title"] = "Menu";
}

<h2>Menu</h2>

@foreach (var cat in Model)
{
    <h3>@cat.Name</h3>
    <div class="row">
        @if (cat.MenuItems != null && cat.MenuItems.Any())
        {
            foreach (var item in cat.MenuItems.Where(i => i.IsAvailable))
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><strong>@item.Price.ToString("C")</strong></p>
                            <a asp-controller="Menu" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12"><em>No available items</em></div>
        }
    </div>
}
