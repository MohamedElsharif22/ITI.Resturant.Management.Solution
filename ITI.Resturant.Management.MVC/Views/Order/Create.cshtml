@model ITI.Resturant.Management.Application.DTOs.CreateOrderDto
@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Create Order" : "Checkout";
    var isAdmin = User.IsInRole("Admin");
    var menuItems = ViewBag.MenuItems as List<ITI.Resturant.Management.Domain.Entities.Menu.MenuItem> ?? new List<ITI.Resturant.Management.Domain.Entities.Menu.MenuItem>();
}

<style>
    .checkout-header {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-light));
        color: white;
        padding: 2rem;
        border-radius: 15px;
        margin-bottom: 2rem;
        text-align: center;
    }

    .checkout-header h1 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .checkout-container {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 2rem;
    }

    @@media (max-width: 992px) {
        .checkout-container {
            grid-template-columns: 1fr;
        }
    }

    .form-section {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-dark);
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 3px solid var(--accent-color);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .section-title i {
        color: var(--primary-color);
    }

    .cart-summary {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        position: sticky;
        top: 20px;
    }

    .cart-item {
        display: flex;
        gap: 1rem;
        padding: 1rem;
        background: rgba(64, 145, 108, 0.05);
        border-radius: 10px;
        margin-bottom: 1rem;
        transition: all 0.3s ease;
    }

    .cart-item:hover {
        background: rgba(64, 145, 108, 0.1);
        transform: translateX(5px);
    }

    .cart-item-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
    }

    .cart-item-details {
        flex-grow: 1;
    }

    .cart-item-name {
        font-weight: 700;
        color: var(--primary-dark);
        margin-bottom: 0.25rem;
    }

    .cart-item-category {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin-bottom: 0.5rem;
    }

    .cart-item-price {
        font-weight: 700;
        color: var(--accent-light);
    }

    .cart-item-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .quantity-control {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: white;
        padding: 0.25rem;
        border-radius: 8px;
    }

    .quantity-btn-small {
        width: 30px;
        height: 30px;
        border: none;
        background: var(--primary-color);
        color: white;
        border-radius: 5px;
        cursor: pointer;
        font-weight: 700;
        transition: all 0.2s ease;
    }

    .quantity-btn-small:hover {
        background: var(--primary-dark);
        transform: scale(1.1);
    }

    .quantity-display {
        font-weight: 700;
        color: var(--primary-dark);
        min-width: 30px;
        text-align: center;
    }

    .remove-btn {
        background: none;
        border: none;
        color: #e76f51;
        cursor: pointer;
        font-size: 1.2rem;
        padding: 0.5rem;
        transition: all 0.2s ease;
    }

    .remove-btn:hover {
        color: #d62828;
        transform: scale(1.2);
    }

    .cart-empty {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--text-muted);
    }

    .cart-empty i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.5;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e0e0e0;
    }

    .summary-row.total {
        border-bottom: none;
        border-top: 3px solid var(--primary-color);
        padding-top: 1rem;
        margin-top: 1rem;
        font-size: 1.3rem;
        font-weight: 800;
        color: var(--primary-dark);
    }

    .summary-label {
        color: var(--text-muted);
    }

    .summary-value {
        font-weight: 700;
        color: var(--primary-dark);
    }

    .summary-value.discount {
        color: #52b788;
    }

    .order-type-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .order-type-card {
        border: 3px solid #e0e0e0;
        border-radius: 12px;
        padding: 1.5rem 1rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .order-type-card:hover {
        border-color: var(--primary-light);
        background: rgba(64, 145, 108, 0.05);
    }

    .order-type-card.selected {
        border-color: var(--primary-color);
        background: linear-gradient(135deg, rgba(45, 106, 79, 0.1), rgba(64, 145, 108, 0.1));
    }

    .order-type-card i {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .order-type-card .card-label {
        font-weight: 700;
        color: var(--primary-dark);
    }

    .discount-type-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
    }

    .discount-card {
        border: 3px solid #e0e0e0;
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .discount-card:hover {
        border-color: var(--accent-color);
        background: rgba(244, 162, 97, 0.05);
    }

    .discount-card.selected {
        border-color: var(--accent-color);
        background: linear-gradient(135deg, rgba(244, 162, 97, 0.1), rgba(231, 111, 81, 0.1));
    }

    .discount-card i {
        font-size: 2rem;
        color: var(--accent-color);
        margin-bottom: 0.5rem;
    }

    .delivery-address-section {
        display: none;
    }

    .delivery-address-section.show {
        display: block;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Admin Menu Item Selector */
    .menu-item-selector {
        margin-bottom: 1.5rem;
    }

    .menu-item-search {
        margin-bottom: 1rem;
    }

    .selected-items {
        margin-top: 1rem;
        max-height: 400px;
        overflow-y: auto;
    }
</style>

<div class="checkout-header">
    <h1><i class="fas @(isAdmin ? "fa-cash-register" : "fa-shopping-cart")"></i> @ViewData["Title"]</h1>
    <p>@(isAdmin ? "Create a new order for customer" : "Complete your order and enjoy your meal")</p>
</div>

<form asp-action="Create" method="post" id="orderForm">
    <div class="checkout-container">
        <!-- Left Column: Order Details -->
        <div>
            <!-- Customer Information -->
            <div class="form-section mb-4">
                <h3 class="section-title">
                    <i class="fas fa-user"></i> Customer Information
                </h3>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerName" class="form-label">Full Name *</label>
                        <input asp-for="CustomerName" class="form-control" placeholder="John Doe" required />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerPhone" class="form-label">Phone Number *</label>
                        <input asp-for="CustomerPhone" class="form-control" type="tel" placeholder="+1 (555) 123-4567" required />
                        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                    </div>
                    
                    <div class="col-12 mb-3">
                        <label asp-for="CustomerEmail" class="form-label">Email Address *</label>
                        <input asp-for="CustomerEmail" class="form-control" type="email" placeholder="john@example.com" required />
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Order Type -->
            <div class="form-section mb-4">
                <h3 class="section-title">
                    <i class="fas fa-truck"></i> Order Type
                </h3>
                
                <input type="hidden" asp-for="OrderType" id="orderTypeInput" value="DineIn" />
                
                <div class="order-type-cards">
                    <div class="order-type-card selected" data-type="DineIn">
                        <i class="fas fa-utensils"></i>
                        <div class="card-label">Dine In</div>
                    </div>
                    <div class="order-type-card" data-type="TakeOut">
                        <i class="fas fa-shopping-bag"></i>
                        <div class="card-label">Take Out</div>
                    </div>
                    <div class="order-type-card" data-type="Delivery">
                        <i class="fas fa-truck"></i>
                        <div class="card-label">Delivery</div>
                    </div>
                    <div class="order-type-card" data-type="Online">
                        <i class="fas fa-laptop"></i>
                        <div class="card-label">Online</div>
                    </div>
                </div>
                
                <div class="delivery-address-section" id="deliveryAddressSection">
                    <label asp-for="DeliveryAddress" class="form-label">Delivery Address *</label>
                    <textarea asp-for="DeliveryAddress" class="form-control" rows="3" placeholder="Street address, city, state, ZIP code"></textarea>
                    <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                </div>
            </div>

            <!-- Discount Type (Optional) -->
            <div class="form-section mb-4">
                <h3 class="section-title">
                    <i class="fas fa-tag"></i> Discount Type (Optional)
                </h3>
                
                <input type="hidden" name="CustomerDiscountType" id="discountTypeInput" value="0" />
                
                <div class="discount-type-cards">
                    <div class="discount-card selected" data-discount="0">
                        <i class="fas fa-times-circle"></i>
                        <div class="card-label">None</div>
                    </div>
                    <div class="discount-card" data-discount="1">
                        <i class="fas fa-graduation-cap"></i>
                        <div class="card-label">Student</div>
                        <small class="text-muted">15% off</small>
                    </div>
                    <div class="discount-card" data-discount="2">
                        <i class="fas fa-user-clock"></i>
                        <div class="card-label">Senior</div>
                        <small class="text-muted">15% off</small>
                    </div>
                </div>
            </div>

            @if (isAdmin)
            {
                <!-- Admin: Menu Item Selector -->
                <div class="form-section mb-4">
                    <h3 class="section-title">
                        <i class="fas fa-list"></i> Select Menu Items
                    </h3>
                    
                    <div class="menu-item-selector">
                        <input type="text" class="form-control mb-3" id="menuItemSearch" placeholder="Search menu items..." />
                        
                        <select class="form-select" id="menuItemDropdown" size="8">
                            @foreach (var item in menuItems.Where(m => m.IsAvailable))
                            {
                                <option value="@item.Id" data-name="@item.Name" data-price="@item.Price" data-image="@item.ImageUrl" data-category="@item.Category?.Name">
                                    @item.Name - $@item.Price.ToString("F2") (@item.Category?.Name)
                                </option>
                            }
                        </select>
                        
                        <button type="button" class="btn btn-primary mt-2" onclick="addMenuItem()">
                            <i class="fas fa-plus"></i> Add Item
                        </button>
                    </div>
                    
                    <div id="selectedItems" class="selected-items"></div>
                </div>
            }
        </div>

        <!-- Right Column: Cart Summary -->
        <div>
            <div class="cart-summary">
                <h3 class="section-title">
                    <i class="fas fa-receipt"></i> Order Summary
                </h3>
                
                <div id="cartItems">
                    @if (!isAdmin)
                    {
                        <div class="cart-empty">
                            <i class="fas fa-shopping-cart"></i>
                            <p>Loading cart items...</p>
                        </div>
                    }
                    else
                    {
                        <div class="cart-empty">
                            <i class="fas fa-box-open"></i>
                            <p>No items added yet</p>
                        </div>
                    }
                </div>
                
                <div id="cartSummary" style="display:none;">
                    <div class="summary-row">
                        <span class="summary-label">Subtotal:</span>
                        <span class="summary-value" id="subtotalValue">$0.00</span>
                    </div>
                    <div class="summary-row">
                        <span class="summary-label">Tax (8.5%):</span>
                        <span class="summary-value" id="taxValue">$0.00</span>
                    </div>
                    <div class="summary-row">
                        <span class="summary-label">Discount:</span>
                        <span class="summary-value discount" id="discountValue">-$0.00</span>
                    </div>
                    <div class="summary-row total">
                        <span>Total:</span>
                        <span id="totalValue">$0.00</span>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-accent btn-lg w-100 mt-3" id="submitBtn" disabled>
                    <i class="fas fa-check-circle"></i> @(isAdmin ? "Create Order" : "Place Order")
                </button>
                
                @if (!isAdmin)
                {
                    <a asp-controller="Menu" asp-action="Index" class="btn btn-outline-primary w-100 mt-2">
                        <i class="fas fa-arrow-left"></i> Continue Shopping
                    </a>
                }
            </div>
        </div>
    </div>
    
    <div id="orderItemsContainer"></div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        const isAdmin = @(isAdmin ? "true" : "false");
        let cartData = { items: [] };
        
        // Order Type Selection
        document.querySelectorAll('.order-type-card').forEach(card => {
            card.addEventListener('click', function() {
                document.querySelectorAll('.order-type-card').forEach(c => c.classList.remove('selected'));
                this.classList.add('selected');
                document.getElementById('orderTypeInput').value = this.dataset.type;
                
                const deliverySection = document.getElementById('deliveryAddressSection');
                if (this.dataset.type === 'Delivery') {
                    deliverySection.classList.add('show');
                } else {
                    deliverySection.classList.remove('show');
                }
            });
        });
        
        // Discount Type Selection
        document.querySelectorAll('.discount-card').forEach(card => {
            card.addEventListener('click', function() {
                document.querySelectorAll('.discount-card').forEach(c => c.classList.remove('selected'));
                this.classList.add('selected');
                document.getElementById('discountTypeInput').value = this.dataset.discount;
                updateSummary();
            });
        });
        
        // Load cart for customers
        if (!isAdmin) {
            loadCart();
        }
        
        function loadCart() {
            fetch('/Cart/GetCart')
                .then(response => response.json())
                .then(cart => {
                    cartData = cart;
                    renderCart();
                    updateSummary();
                })
                .catch(err => console.error('Error loading cart:', err));
        }
        
        function renderCart() {
            const container = document.getElementById('cartItems');
            
            if (!cartData.items || cartData.items.length === 0) {
                container.innerHTML = `
                    <div class="cart-empty">
                        <i class="fas fa-shopping-cart"></i>
                        <p>Your cart is empty</p>
                        <a href="/Menu" class="btn btn-primary mt-2">Browse Menu</a>
                    </div>
                `;
                document.getElementById('submitBtn').disabled = true;
                return;
            }
            
            container.innerHTML = cartData.items.map(item => `
                <div class="cart-item" data-id="${item.menuItemId}">
                    <img src="${item.imageUrl || 'https://via.placeholder.com/80'}" alt="${item.name}" class="cart-item-image">
                    <div class="cart-item-details">
                        <div class="cart-item-name">${item.name}</div>
                        <div class="cart-item-category">${item.category || 'Uncategorized'}</div>
                        <div class="cart-item-price">$${item.price.toFixed(2)} each</div>
                    </div>
                    <div class="cart-item-actions">
                        <div class="quantity-control">
                            <button type="button" class="quantity-btn-small" onclick="updateQuantity(${item.menuItemId}, ${item.quantity - 1})">-</button>
                            <span class="quantity-display">${item.quantity}</span>
                            <button type="button" class="quantity-btn-small" onclick="updateQuantity(${item.menuItemId}, ${item.quantity + 1})">+</button>
                        </div>
                        <button type="button" class="remove-btn" onclick="removeItem(${item.menuItemId})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `).join('');
            
            document.getElementById('submitBtn').disabled = false;
        }
        
        function updateQuantity(menuItemId, newQuantity) {
            if (newQuantity < 1) {
                removeItem(menuItemId);
                return;
            }
            
            fetch('/Cart/UpdateQuantity', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ menuItemId, quantity: newQuantity })
            })
            .then(response => response.json())
            .then(cart => {
                cartData = cart;
                renderCart();
                updateSummary();
            })
            .catch(err => console.error('Error updating quantity:', err));
        }
        
        function removeItem(menuItemId) {
            updateQuantity(menuItemId, 0);
        }
        
        function updateSummary() {
            if (!cartData.items || cartData.items.length === 0) {
                document.getElementById('cartSummary').style.display = 'none';
                return;
            }
            
            const subtotal = cartData.items.reduce((sum, item) => sum + (item.price * item.quantity), 0);
            const discountType = parseInt(document.getElementById('discountTypeInput').value);
            
            // Calculate discount (simplified - server will do actual calculation)
            let discountRate = 0;
            if (discountType === 1 || discountType === 2) discountRate = 0.15; // 15% for student/senior
            
            const discount = subtotal * discountRate;
            const taxableAmount = subtotal - discount;
            const tax = taxableAmount * 0.085;
            const total = taxableAmount + tax;
            
            document.getElementById('subtotalValue').textContent = '$' + subtotal.toFixed(2);
            document.getElementById('taxValue').textContent = '$' + tax.toFixed(2);
            document.getElementById('discountValue').textContent = '-$' + discount.toFixed(2);
            document.getElementById('totalValue').textContent = '$' + total.toFixed(2);
            document.getElementById('cartSummary').style.display = 'block';
        }
        
        // Admin: Menu Item Management
        if (isAdmin) {
            const menuItems = @Html.Raw(Json.Serialize(menuItems.Select(m => new { 
                id = m.Id, 
                name = m.Name, 
                price = m.Price, 
                imageUrl = m.ImageUrl,
                category = m.Category?.Name ?? ""
            })));
            
            let selectedItems = [];
            
            document.getElementById('menuItemSearch').addEventListener('input', function(e) {
                const search = e.target.value.toLowerCase();
                const options = document.querySelectorAll('#menuItemDropdown option');
                options.forEach(opt => {
                    const text = opt.textContent.toLowerCase();
                    opt.style.display = text.includes(search) ? '' : 'none';
                });
            });
            
            window.addMenuItem = function() {
                const select = document.getElementById('menuItemDropdown');
                const option = select.options[select.selectedIndex];
                if (!option) return;
                
                const item = {
                    menuItemId: parseInt(option.value),
                    name: option.dataset.name,
                    price: parseFloat(option.dataset.price),
                    imageUrl: option.dataset.image,
                    category: option.dataset.category,
                    quantity: 1
                };
                
                const existingIndex = selectedItems.findIndex(i => i.menuItemId === item.menuItemId);
                if (existingIndex >= 0) {
                    selectedItems[existingIndex].quantity++;
                } else {
                    selectedItems.push(item);
                }
                
                renderAdminItems();
                updateSummary();
            };
            
            function renderAdminItems() {
                cartData.items = selectedItems;
                renderCart();
            }
        }
        
        // Form Submission
        document.getElementById('orderForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!cartData.items || cartData.items.length === 0) {
                alert('Please add items to your order');
                return;
            }
            
            // Build order items
            const container = document.getElementById('orderItemsContainer');
            container.innerHTML = '';
            
            cartData.items.forEach((item, index) => {
                container.innerHTML += `
                    <input type="hidden" name="OrderItems[${index}].MenuItemId" value="${item.menuItemId}" />
                    <input type="hidden" name="OrderItems[${index}].Quantity" value="${item.quantity}" />
                    <input type="hidden" name="OrderItems[${index}].UnitPrice" value="${item.price}" />
                    <input type="hidden" name="OrderItems[${index}].Subtotal" value="${(item.price * item.quantity).toFixed(2)}" />
                `;
            });
            
            this.submit();
        });
    </script>
}