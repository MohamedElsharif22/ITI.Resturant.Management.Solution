@model ITI.Resturant.Management.Domain.Entities.Order_.Order

@{
    ViewData["Title"] = "Place Order";
    var items = ViewData["Items"] as IEnumerable<ITI.Resturant.Management.Domain.Entities.Menu.MenuItem>;
}

<h2>Place Order</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label"></label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerPhone" class="form-label"></label>
        <input asp-for="CustomerPhone" class="form-control" />
        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerEmail" class="form-label"></label>
        <input asp-for="CustomerEmail" class="form-control" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Order Type</label>
        <select asp-for="OrderType" class="form-select">
            <option value="0">DineIn</option>
            <option value="1">Takeout</option>
            <option value="2">Delivery</option>
        </select>
    </div>

    <div id="deliveryAddress" class="mb-3" style="display:none;">
        <label asp-for="DeliveryAddress" class="form-label"></label>
        <input asp-for="DeliveryAddress" class="form-control" />
        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
    </div>

    <h4>Items</h4>
    <div class="row">
        @foreach (var it in items)
        {
            <div class="col-md-4 mb-2">
                <div class="card p-2">
                    <h5>@it.Name</h5>
                    <p>@it.Description</p>
                    <p><strong>@it.Price.ToString("C")</strong></p>
                    <div class="input-group">
                        <input type="number" name="OrderItems[0].Quantity" class="form-control" min="0" value="0" />
                        <input type="hidden" name="OrderItems[0].MenuItemId" value="@it.Id" />
                        <input type="hidden" name="OrderItems[0].UnitPrice" value="@it.Price" />
                    </div>
                </div>
            </div>
        }
    </div>

    <button class="btn btn-primary mt-3">Place Order</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('[name="OrderType"]').addEventListener('change', function(e){
            var val = e.target.value;
            var el = document.getElementById('deliveryAddress');
            if(val == '2') el.style.display = 'block'; else el.style.display = 'none';
        });
    </script>
}
