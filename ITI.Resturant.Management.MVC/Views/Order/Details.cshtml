@model ITI.Resturant.Management.Domain.Entities.Order_.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order #@Model.Id</h2>
<p>Status: <strong>@Model.Status</strong></p>
<p>Placed: @Model.OrderDate</p>
<p>Customer: @Model.CustomerName</p>
<p>Phone: @Model.CustomerPhone</p>
@if(Model.OrderType == ITI.Resturant.Management.Domain.Entities.Enums.OrderType.Delivery){
    <p>Delivery Address: @Model.DeliveryAddress</p>
}

<h4>Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Unit</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var it in Model.OrderItems)
        {
            <tr>
                <td>@it.MenuItem?.Name ?? it.MenuItemId.ToString()</td>
                <td>@it.Quantity</td>
                <td>@it.UnitPrice.ToString("C")</td>
                <td>@it.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="card p-3">
    <p>Subtotal: @Model.Subtotal.ToString("C")</p>
    <p>Tax: @Model.Tax.ToString("C")</p>
    <p>Discount: @Model.Discount.ToString("C")</p>
    <h4>Total: @Model.Total.ToString("C")</h4>
</div>

<form asp-action="Cancel" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button class="btn btn-danger" type="submit" @(Model.Status==ITI.Resturant.Management.Domain.Entities.Enums.OrderStatus.Ready || Model.Status==ITI.Resturant.Management.Domain.Entities.Enums.OrderStatus.Delivered ? "disabled" : "")>Cancel Order</button>
</form>
