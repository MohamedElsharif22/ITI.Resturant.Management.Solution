@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<style>
    .error-container {
        text-align: center;
        padding: 5rem 0;
    }

    .error-icon {
        font-size: 8rem;
        color: #e76f51;
        margin-bottom: 2rem;
        animation: bounce 2s infinite;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-20px);
    }

    }

    .error-title {
        font-size: 3rem;
        font-weight: 800;
        color: var(--primary-dark);
        margin-bottom: 1rem;
    }

    .error-message {
        font-size: 1.25rem;
        color: var(--text-muted);
        margin-bottom: 2rem;
    }

    .error-card {
        background: white;
        border-radius: 15px;
        padding: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        max-width: 600px;
        margin: 0 auto;
    }
</style>

<div class="error-container">
    <div class="error-card">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 class="error-title">Oops! Something went wrong</h1>
        <p class="error-message">
            We're sorry, but an unexpected error occurred while processing your request.
        </p>
        @if (Model?.ShowRequestId == true)
        {
            <p class="text-muted mb-4">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
        <div class="d-flex gap-3 justify-content-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-home"></i> Go Home
            </a>
            <button onclick="window.history.back()" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-arrow-left"></i> Go Back
            </button>
        </div>
    </div>
</div>